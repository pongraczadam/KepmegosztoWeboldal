<div id="userForm">
    <script>
        var str = '<%= flash[:notice] %>';
        if (str != "")
            alert(str);
    </script>
    <fieldset>
        <legend>Bejelentkezés</legend>
        <%= form_tag '/sessions/create', method: :post do %>
            <%= label_tag 'email', 'Email' %>
            <%= text_field 'email', '', placeholder: 'Email' %>

            <%= label_tag 'password', 'Jelszó' %>
            <%= password_field_tag 'password', '', placeholder: 'Jelszó' %>

            <%= submit_tag "Bejelentkezés" %>
        <% end %>
    </fieldset>
</div>