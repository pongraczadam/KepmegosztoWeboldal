<div id="userForm">
    <fieldset>
        <legend>Add meg az email címed a jelszó helyreállításához</legend>
        <%= form_tag send_forgotten_path, method: :post do %>
            <%= label_tag 'email', 'Email' %>
            <%= text_field 'email', '', placeholder: 'Email' %>

            <%= submit_tag "Jelszó helyreállítása" %>
        <% end %>
    </fieldset>
</div>